<h1 class="m-3">Welcome to Ironmatch</h1>

<form action="/" method="GET" id="search">
  <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Search player's name" name="player" form="search">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="submit" form="search">Search</button>
      </div>    
   </div>
</form>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Sport</th>
      <th scope="col">Player 1</th>
      <th scope="col">Score 1</th>
      <th scope="col">Score 2</th>
      <th scope="col">Player 2</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each results}}
    <tr>
      <td>{{sport}}</td>
      <td>{{player1}}</td>
      <td>{{score1}}</td>
      <td>{{score2}}</td>
      <td>{{player2}}</td>
      <td><a href="/delete/{{_id}}" class="btn btn-outline-danger">Delete</a></td>
    </tr>
    {{/each}}
     <tr>
      <form action="/" method="POST" class="mt-3">
      <td><input type="text" name="sport" id="" class="form-control"></td>
      <td><input type="text" name="player1" id="" class="form-control"></td>
      <td><input type="text" name="score1" id="" class="form-control"></td>
      <td><input type="text" name="score2" id="" class="form-control"></td>
      <td><input type="text" name="player2" id="" class="form-control"></td>
      <td><button type="submit" class="btn btn-outline-primary">Add</button></td>
      </form>
    </tr>
  </tbody>
</table>
</div>