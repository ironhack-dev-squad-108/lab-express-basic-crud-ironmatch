<h1 class="m-3">Welcome to Ironmatch</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Player1</th>
      <th scope="col">Score1</th>
      <th scope="col">Score2</th>
      <th scope="col">Player2</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each results}}
    <tr>
      <td>{{player1}}</td>
      <td>{{score1}}</td>
      <td>{{score2}}</td>
      <td>{{player2}}</td>
      <td><a href="/delete/{{_id}}" class="btn btn-primary">Delete</a></td>
    </tr>
    {{/each}}
     <tr>
        <form action="/" method="POST" class="mt-3">
      <td><input type="text" name="player1" id="" placeholder="player1" class="form-control"></td>
      <td><input type="text" name="score1" id="" placeholder="score1" class="form-control"></td>
      <td><input type="text" name="score2" id="" placeholder="score2" class="form-control"></td>
      <td><input type="text" name="player2" id="" placeholder="player2" class="form-control"></td>
      <td><button type="submit" class="btn btn-primary">Add</button></td>
      </form>
    </tr>
  </tbody>
</table>
</div>