


<main class="container"></main>
<h1>Welcome to Ironmatch</h1>
<form action="/add-match" method="POST">
  <table class="table">
    <body>
      <tr>
        <th>Player 1</th>
        <th>Score 1</th>
        <th>Score 2</th>
        <th>Player 2</th>
        <th>Action</th>
      </tr>
      {{#each matches}}
      <tr>
        <th>{{player1}}</th>
        <th>{{score1}}</th>
        <th>{{score2}}</th>
        <th>{{player2}}</th>
        <th><a href="/delete/{{_id}}">DELETE</a></th>
      </tr>
      {{/each}}
     
      <tr>
        <td><input class="form-control" type="text" name="player1"></td>
        <td><input class="form-control" type="number" name="score1"></td>
        <td><input class="form-control" type="number" name="score2"></td>
        <td><input class="form-control" type="text" name="player2"></td>
        <td><button class="btn btn-primary" type="submit">ADD</button></td> 
      </tr>
    </body>
  </table>
</form>
</main>